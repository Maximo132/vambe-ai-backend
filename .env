# Configuración de la base de datos
DATABASE_URL=postgresql://chatbot_user:chatbot_password@localhost:5432/chatbot_db
TEST_DATABASE_URL=postgresql://chatbot_user:chatbot_password@localhost:5432/chatbot_test_db

# Configuración de la aplicación
APP_NAME=Chatbot API
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Configuración JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 horas

# Configuración de OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Configuración de Weaviate (opcional)
WEAVIATE_URL=http://weaviate:8080

# Configuración de Redis (opcional)
REDIS_URL=redis://localhost:6379/0

# Configuración de MinIO (opcional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
MINIO_BUCKET_NAME=chatbot
