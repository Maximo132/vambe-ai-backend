# Configuración de la aplicación
DEBUG=True
SECRET_KEY=your-secret-key-here
API_V1_STR=/api/v1

# Configuración de CORS
CORS_ORIGINS=http://localhost:3000,http://frontend:3000,http://localhost:8000

# Configuración de la base de datos
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vambeai
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vambeai_test

# Configuración de autenticación
JWT_SECRET=your-jwt-secret-key
JWT_REFRESH_SECRET=your-refresh-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_PASSWORD_SALT=your-password-salt

# Configuración de OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Configuración de Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key
WEAVIATE_EMBEDDING_MODEL=text-embedding-3-small

# Configuración de Redis
REDIS_URL=redis://localhost:6379/0

# Configuración de almacenamiento (MinIO/S3)
STORAGE_PROVIDER=minio  # 'minio' o 's3'
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
MINIO_BUCKET_NAME=documents

# Configuración de AWS S3 (opcional, si se usa S3 directamente)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=vambeai-documents

# Configuración de correo electrónico
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@vambe.ai
EMAILS_FROM_NAME=Vambe.ai

# Configuración de URLs
SERVER_HOST=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATEFORMAT=%Y-%m-%d %H:%M:%S
LOG_JSON=False
LOG_FILE=./logs/app.log

# Tiempos de expiración para tokens de verificación
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1

# Configuración de tasa límite (rate limiting)
RATE_LIMIT=100/minute

# Configuración de WebSocket
WEBSOCKET_URL=ws://localhost:8000/ws

# Configuración de tareas en segundo plano
BACKGROUND_TASK_WORKERS=4

# Configuración de seguridad
SECURE_COOKIES=False
SESSION_COOKIE_NAME=vambeai_session
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_SAMESITE=lax
